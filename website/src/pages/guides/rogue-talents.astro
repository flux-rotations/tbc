---
import Base from '../../layouts/Base.astro';
import TalentTree from '../../components/TalentTree.astro';
import { trees, presets } from '../../data/rogue-talents.js';
import { url } from '../../config';
---

<Base title="Rogue Talent Specs" description="Recommended talent specs for Diddy AIO Rogue rotation.">
  <div class="container">
    <div class="breadcrumb">
      <a href={url('/')}>Home</a> / <a href={url('/classes/rogue')}>Rogue</a> / <a href={url('/guides/rogue-talents')}>Talents</a>
    </div>

    <section class="section">
      <h1 style="color: var(--rogue);">Rogue Talent Specs</h1>
      <p class="section-sub">The rotation adapts to your available talents. All three Rogue specs are supported.</p>
    </section>

    {presets.map((preset) => (
      <section class="section" id={preset.slug}>
        <TalentTree trees={trees} preset={preset} classColor="var(--rogue)" />
      </section>
    ))}

  </div>
</Base>
