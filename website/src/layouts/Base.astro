---
import '../styles/global.css';
import { config, url } from '../config';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Multi-class WoW TBC rotation addon.' } = Astro.props;
const pageTitle = `${title} | Diddy AIO`;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{pageTitle}</title>

  <!-- SEO -->
  <meta name="description" content={description} />
  <meta name="author" content="Diddy AIO" />
  <meta name="keywords" content="WoW, TBC, rotation, addon, druid, hunter, TellMeWhen, classic" />
  <meta name="robots" content="index, follow" />
  <link rel="canonical" href={canonicalUrl.href} />
  <meta name="theme-color" content="#6c63ff" />

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href={url('/favicon.svg')} />

  <!-- Open Graph -->
  <meta property="og:type" content="website" />
  <meta property="og:site_name" content="Diddy AIO" />
  <meta property="og:title" content={pageTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={canonicalUrl.href} />
  <meta property="og:image" content={new URL(url('/og.svg'), Astro.site).href} />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:image" content={new URL(url('/og.svg'), Astro.site).href} />
  <meta name="twitter:title" content={pageTitle} />
  <meta name="twitter:description" content={description} />
</head>
<body>
  <nav class="nav">
    <div class="nav-inner">
      <a href={url('/')} class="nav-logo">Diddy <span>AIO</span></a>
      <ul class="nav-links">
        <li><a href={url('/classes/druid')}>Druid</a></li>
        <li><a href={url('/classes/hunter')}>Hunter</a></li>
        <li><a href={url('/guides/installation')}>Install</a></li>
        <li><a href={config.github} target="_blank">GitHub</a></li>
        <li class="nav-desktop"><a href={url('/changelog')}>Changelog</a></li>
        <li class="nav-desktop"><a href={url('/faq')}>FAQ</a></li>
        <li class="nav-desktop"><a href={config.discord} target="_blank">Discord</a></li>
        <li class="nav-more">
          <button class="nav-more-btn" aria-label="More links" aria-expanded="false">&#9662;</button>
          <ul class="nav-dropdown">
            <li><a href={url('/changelog')}>Changelog</a></li>
            <li><a href={url('/faq')}>FAQ</a></li>
            <li><a href={config.discord} target="_blank">Discord</a></li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>

  <main>
    <slot />
  </main>

  <footer class="footer">
    Diddy AIO &mdash; Open source WoW TBC rotation addon
  </footer>

  <script is:inline>
    const btn = document.querySelector('.nav-more-btn');
    const dropdown = document.querySelector('.nav-dropdown');
    btn.addEventListener('click', (e) => {
      e.stopPropagation();
      const open = dropdown.classList.toggle('open');
      btn.setAttribute('aria-expanded', open);
    });
    document.addEventListener('click', () => {
      dropdown.classList.remove('open');
      btn.setAttribute('aria-expanded', 'false');
    });
  </script>
</body>
</html>
